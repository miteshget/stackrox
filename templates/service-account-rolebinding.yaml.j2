apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: registry-admin
  namespace: "{{ _internal_service_account_namespace }}"
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: "{{ _internal_service_account_registry_role }}"
subjects:
- kind: ServiceAccount
  name: "{{ _internal_service_account }}"
  namespace: "{{ _internal_service_account_namespace }}"